syntax "css" "\.css$"

# Selectors
color red "."

# Properties
color yellow start="\{" end="\}"

# Values
color brightwhite start=":" end="([;^\{]|$)"

# Pseudo Elements
color magenta ":active|:focus|:hover|:link|:visited|:link|:after|:before|$"

# Comments
color cyan start="\/\*" end="\\*/"

# Separators        
color green ";|:|\{|\}"
